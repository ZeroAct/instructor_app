# Alternative Dockerfile without UV for environments with network restrictions
FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Copy project files
COPY pyproject.toml .python-version ./
COPY main.py ./
COPY src/ ./src/

# Install dependencies using pip directly
RUN pip install --no-cache-dir \
    instructor>=1.0.0 \
    fastapi>=0.115.0 \
    uvicorn[standard]>=0.32.0 \
    pydantic>=2.0.0 \
    openai>=1.0.0 \
    anthropic>=0.34.0 \
    python-multipart>=0.0.9 \
    jinja2>=3.1.0 \
    mcp>=1.0.0

# Expose port
EXPOSE 8000

# Set environment variables
ENV PYTHONUNBUFFERED=1

# Run the application
CMD ["python", "main.py"]
